# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control

# OpenAI API
OPENAI_API_KEY=<YOUR_OPENAI_API_KEY>
OPENAI_ORG_ID=<YOUR_OPENAI_ORG_ID>

# Anthropic API
ANTHROPIC_API_KEY=<YOUR_ANTHROPIC_API_KEY>

# HuggingFace
HUGGINGFACE_API_KEY=<YOUR_HUGGINGFACE_TOKEN>

# LangChain (Optional - for tracing/monitoring)
LANGCHAIN_API_KEY=<YOUR_LANGCHAIN_API_KEY>
LANGCHAIN_TRACING_V2=false
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_PROJECT=ai-workflows-bootcamp

# Database (to be configured in later weeks)
DB_CONNECTION_STRING=<YOUR_DATABASE_URL>
DATABASE_URL=<YOUR_DATABASE_URL>

# Vector Databases (to be configured in Week 02)
PINECONE_API_KEY=<YOUR_PINECONE_API_KEY>
PINECONE_ENVIRONMENT=<YOUR_PINECONE_ENVIRONMENT>
WEAVIATE_URL=<YOUR_WEAVIATE_URL>
WEAVIATE_API_KEY=<YOUR_WEAVIATE_API_KEY>

# Cloud Provider (for later weeks)
AWS_ACCESS_KEY_ID=<YOUR_AWS_ACCESS_KEY>
AWS_SECRET_ACCESS_KEY=<YOUR_AWS_SECRET_KEY>
AWS_REGION=us-east-1
GCP_PROJECT_ID=<YOUR_GCP_PROJECT_ID>
AZURE_TENANT_ID=<YOUR_AZURE_TENANT_ID>

# Application Settings
LOG_LEVEL=INFO
DEBUG=False
ENVIRONMENT=development

# API Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_TOKENS_PER_REQUEST=2000

# Security
SECRET_KEY=<GENERATE_A_SECRET_KEY>
JWT_SECRET=<GENERATE_A_JWT_SECRET>

# Salesforce (Week 16 - Enterprise project)
SALESFORCE_USERNAME=<YOUR_SF_USERNAME>
SALESFORCE_PASSWORD=<YOUR_SF_PASSWORD>
SALESFORCE_SECURITY_TOKEN=<YOUR_SF_TOKEN>
SALESFORCE_DOMAIN=<YOUR_SF_DOMAIN>

# Social Media APIs (Week 15 - Sports project)
TWITTER_API_KEY=<YOUR_TWITTER_API_KEY>
TWITTER_API_SECRET=<YOUR_TWITTER_API_SECRET>
TWITTER_BEARER_TOKEN=<YOUR_TWITTER_BEARER_TOKEN>
REDDIT_CLIENT_ID=<YOUR_REDDIT_CLIENT_ID>
REDDIT_CLIENT_SECRET=<YOUR_REDDIT_CLIENT_SECRET>

# Monitoring & Observability (optional)
SENTRY_DSN=<YOUR_SENTRY_DSN>
DATADOG_API_KEY=<YOUR_DATADOG_API_KEY>
